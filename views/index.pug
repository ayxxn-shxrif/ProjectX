extends layout

block content
  div.home_content
    h1 Members Club
    each message in messages
      .message
        if user && (user.is_member || user.is_admin)
          .message_info
            .author
              span Author:
              span= message.user.full_name
            .date
              span Date added:
              span= message.date_formatted
        .message_content
          h2= message.title
          p= message.text
        if user && user.is_admin
          .delete_ui
            form(method="POST", action=`/delete/${message.id}`)
              button(type="submit") Delete message


  