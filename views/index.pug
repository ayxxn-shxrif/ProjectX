extends layout

block content
  header.header
    nav
      if user
        a(href="/log-out")
          button.btn.btn-primary Logout 
        a(href="/new-message")
          button.btn.btn-primary Create New Message
        a(href="/join")
          button.btn.btn-primary Join Members Club
      else if !user
        a(href="/sign-up")
          button.btn.btn-primary Sign-up
        a(href="/log-in")
          button.btn.btn-primary Login
  if user
    h1 Welcome #{user.full_name}
  else 
    h1= title
  p Welcome to #{title}
