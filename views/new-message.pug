extends layout

block content
  form(class="message__form", method="POST", action="/new-message")
    div.input-group
      label(for="title") Title
      input#title(type="text", name="title")
    div.input-group
      label(for="text") Text:
      textarea#text(type="text", name="text")
    button(type="submit") Submit
  if errors
    ul
      for error in errors
        li!= error.msg
  
